{
    "manifest_version": 2,
    "name": "__MSG_name__",
    "default_locale": "en",
    "version": "1.0",
    "description": "__MSG_description__",
    "permissions": [
        "storage",
        "tabs",
        "https://web.whatsapp.com/"
    ],
    "browser_action": {
        "default_icon": { "38": "icons/icon-new-38.png" },
        "default_title": "WhatsApp",
        "default_popup": "popup.html"
    
    },
    "icons": { "32" : "icons/logo-new-32.png", "64": "icons/logo-new-64.png" },
    "options_page": "options.html",
    "background": {
        "page": "background.html",
        "persistent": true
    }
}